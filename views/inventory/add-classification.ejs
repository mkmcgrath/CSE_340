<% if (messages() && messages().length > 0) { %>
  <div class="flash-messages">
    <%- messages() %>
  </div>
<% } %>

<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form id="addClassification" action="/inv/add-classification" method="post">
  <div class="form-group">
    <label for="classification_name">Classification Name</label>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z0-9]+$" value="<%= locals.classification_name ? classification_name : '' %>">
    <small>Must not contain spaces or special characters.</small>
  </div>
  <div class="form-group">
    <button type="submit">Add Classification</button>
  </div>
</form>
