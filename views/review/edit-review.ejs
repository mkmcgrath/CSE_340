<h1><%= title %></h1>

<% if (errors) { %>
  <ul class="error-list">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/review/update" method="post" class="review-edit-form">
  <input type="hidden" name="review_id" value="<%= locals.review_id || '' %>">
  <input type="hidden" name="inv_id" value="<%= locals.inv_id || '' %>">

  <div class="form-group">
    <label for="review_rating">Rating:</label>
    <select name="review_rating" id="review_rating" required>
      <option value="">Select Rating</option>
      <option value="5" <%= locals.review_rating == 5 ? 'selected' : '' %>>5 Stars - Excellent</option>
      <option value="4" <%= locals.review_rating == 4 ? 'selected' : '' %>>4 Stars - Very Good</option>
      <option value="3" <%= locals.review_rating == 3 ? 'selected' : '' %>>3 Stars - Good</option>
      <option value="2" <%= locals.review_rating == 2 ? 'selected' : '' %>>2 Stars - Fair</option>
      <option value="1" <%= locals.review_rating == 1 ? 'selected' : '' %>>1 Star - Poor</option>
    </select>
  </div>

  <div class="form-group">
    <label for="review_text">Your Review (10-1000 characters):</label>
    <textarea name="review_text" id="review_text" rows="5" required minlength="10" maxlength="1000"><%= locals.review_text || '' %></textarea>
  </div>

  <button type="submit" class="btn-submit">Update Review</button>
  <a href="/account/" class="btn-cancel">Cancel</a>
</form>
